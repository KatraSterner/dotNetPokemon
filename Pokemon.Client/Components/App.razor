<body>
    <Routes />
    <script src="@Assets["_framework/blazor.web.js"]"></script>
    <script>
    window.renderChart = (typeCounts) => {
        const ctx = document.getElementById('typeChart');

        const labels = Object.keys(typeCounts);
        const data = Object.values(typeCounts);

        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: data
                }]
            }
        });
    }
</script>

    </body>

